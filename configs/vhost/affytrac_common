    ServerName testlocal.affytrac.com
    ServerAlias testnew.affytrac.com

    DocumentRoot "/var/www/apps/affytrac/current/public"
    RailsEnv production
    # RailsAllowModRewrite off
    #
    # Check for maintenance file and redirect all requests
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !\.(css|jpg|png|gif)$
    RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
    RewriteCond %{SCRIPT_FILENAME} !maintenance.html
    RewriteRule ^.*$ /system/maintenance.html [L]

    RewriteCond %{HTTP_HOST} ^www.affytrac.com$ [NC]
    RewriteRule ^(.*)$ http://affytrac.com$1 [R=301,L]
    
    <Directory "/var/www/apps/affytrac/current/public">
      Order allow,deny
      Allow from all
    </Directory>
