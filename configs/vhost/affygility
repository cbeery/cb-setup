# For reference, here's the 2013 affygility.com vhost file

<VirtualHost *:80>
  ServerAdmin webmaster@localhost
  ServerName affygility.com
    ServerAlias www.affygility.com
    ServerAlias biotechbuzz.net
    ServerAlias www.biotechbuzz.net
  
  DocumentRoot /var/www/affygility.com/current/build

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  <Directory /var/www/affygility.com/current/build>
#   Options Indexes FollowSymLinks MultiViews
    Options FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all

    # Rewrite rule to change remove www from domain name 9/22/09
    RewriteEngine on
    RewriteBase /
    RewriteCond %{HTTP_HOST} ^www\.affygility\.com$
    RewriteRule (.*) http://affygility.com/$1 [R=Permanent]
    
    # Rule to strip index.html from the URL, for consolidation of web stats
    RewriteCond %{THE_REQUEST} \/index.html\ HTTP [NC]
    RewriteRule (.*)index.html$ /$1 [R=301,L]
    
  </Directory>

  <Directory /var/www/affygility.com/current/build/oel/demo>
    AuthType Basic
    AuthName "OEL Fastrac demo"
    AuthUserFile /etc/apache2/extra/oel_demo_passwords
    Require user oel
  </Directory>

  ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
  <Directory "/usr/lib/cgi-bin">
    AllowOverride None
    Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
    Order allow,deny
    Allow from all
  </Directory>

  ErrorLog /var/log/apache2/error.log
  
  # Added 2/21/11 for custom error pages
  ErrorDocument 403 /messages/403.html
  ErrorDocument 404 /messages/404.html
  ErrorDocument 500 /messages/500.html

  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn

  CustomLog /var/log/apache2/access.log combined
  ServerSignature On

   Alias /doc/ "/usr/share/doc/"
   <Directory "/usr/share/doc/">
       Options Indexes MultiViews FollowSymLinks
       AllowOverride None
       Order deny,allow
       Deny from all
       Allow from 127.0.0.0/255.0.0.0 ::1/128
   </Directory>

  # Moved the Affytrac page to it's own directory
  Redirect 301 /affytrac.html http://affygility.com/affytrac/
  # Moved the potent compound page to the services directory
  Redirect 301 /pccat.html http://affygility.com/services/potent-compound-safety-categorization.html
  # On 10/7/2010 we also renamed the page
  Redirect 301 /services/pccat.html http://affygility.com/services/potent-compound-safety-categorization.html
  # renamed the seminars directory to 'training'
  Redirect 301 /seminars http://affygility.com/training
  # 'podcast' can be an alias for 'podcasts'
  Redirect 301 /podcast http://affygility.com/podcasts
  # Relocated several of the 'contact' pages
  Redirect 301 /contact.html http://affygility.com/contact/index.html
  Redirect 301 /thank_you.html http://affygility.com/contact/thank_you.html
  Redirect 301 /signup.html http://affygility.com/contact/mailinglist/index.html
  Redirect 301 /signup_thank_you.html http://affygility.com/contact/mailinglist/thank_you.html
  Redirect 301 /request_pcs_poster.html http://affygility.com/contact/request_pcs_poster/index.html
  Redirect 301 /request_pcs_poster_thank_you.html http://affygility.com/contact/request_pcs_poster/thank_you.html
  # Relocated several mobile pages
  Redirect 301 /mobile/affytrac.html http://affygility.com/mobile/affytrac/index.html
  Redirect 301 /mobile/affytrac_contact.html http://affygility.com/mobile/affytrac/contact/index.html
  Redirect 301 /mobile/affytrac_thank_you.html http://affygility.com/mobile/affytrac/contact/thank_you.html
  Redirect 301 /mobile/contact.html http://affygility.com/mobile/contact/index.html
  Redirect 301 /mobile/thank_you.html http://affygility.com/mobile/contact/thank_you.html
  # Moved the 'Insights' to separate directory
  Redirect 301 /news/category-4-category-5-potent-compounds.html http://affygility.com/insights/category-4-category-5-potent-compounds.html
  Redirect 301 /news/common-osha-violations.html http://affygility.com/insights/common-osha-violations.html
  Redirect 301 /news/ehs-thought-leader-connor.html http://affygility.com/insights/ehs-thought-leader-connor.html
  Redirect 301 /news/health-and-safety-checklist.html http://affygility.com/insights/health-and-safety-checklist.html
  Redirect 301 /news/holmes.html http://affygility.com/insights/holmes.html
  Redirect 301 /news/occupational-exposure-limits-pharmaceuticals-uncertainties.html http://affygility.com/insights/occupational-exposure-limits-pharmaceuticals-uncertainties.html
  Redirect 301 /news/pc7things.html http://affygility.com/insights/pc7things.html
  Redirect 301 /news/potent-compound-safety-infographic.html http://affygility.com/insights/potent-compound-safety-infographic.html
  Redirect 301 /news/tait.html http://affygility.com/insights/tait.html
  Redirect 301 /news/ten-managing-ehs-recommendations.html http://affygility.com/insights/ten-managing-ehs-recommendations.html
  # Renamed page for setting cookies for ignoring Google Analytics
  Redirect 301 /analyticsoff.html http://affygility.com/cloak/index.html
  
</VirtualHost>